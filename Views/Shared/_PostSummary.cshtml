@using CEverett.ViewModels
@model PostViewModel

<article class="post">
    <header>
        <a href="/post/@Model.Id">
            <h2 class="title">@Model.Title</h2>
        </a>
        <div class="byline">
        	<a class="author" href="/about">Caleb Everett</a>
            <span class="date">
        		@Model.PostDateTime.ToShortDateString()
        	</span>
        </div>
    </header>
    <div class="container">
    	<div class="content">
            <p>
    		    @Model.Summary
            </p>
    	</div>
        
    	@Html.Partial("_PostFooter")
    </div>
</article>
