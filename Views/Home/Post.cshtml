@using CEverett.ViewModels
@model PostViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section meta 
{
    @Html.Partial("_PostTwitterCardMeta", Model)
}
@section styles 
{
    <style>
        body,
        body > header div.background,
        ul.navmenu,
        .splash {
            background: @(Model.Background ?? "#fff") !important;
        }
        
        h2.title span,
        .content p,
        ul.navmenu > i > a,
        a.brand {
            color: @(Model.Color ?? "#000") !important;    
        }
        
        .byline,
        .tags,
        .content a:last-of-type {
            color: @(Model.SecondaryColor ?? "#ccc") !important;
        }
        
        a.hamburger span,
        a.hamburger span:before,
        a.hamburger span:after {
            background: @(Model.Color ?? "#000");
        }
    </style>
    <noscript>
        <style>
            h2.title, a.twitter-share-button, a.twitter-share-button:hover {
                color: @(Model.Color ?? "#000") !important;
            }
            
            a.twitter-share-button {
                text-decoration: none;
            }
        </style>
    </noscript>
}

@Html.Partial("_Post", Model)

@section scripts 
{
	<script src="/js/post.js"></script>
}
